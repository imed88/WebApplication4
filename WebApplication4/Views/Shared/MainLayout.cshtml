<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="~/Content/SiteStyleSheet.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-default shadow" >
        <div class="container-fluid ">
            <div class="navbar-header ">
                <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">WebSiteName</a>
            </div>
            <div class="navbar-collapse collapse" id="navbar">
                <ul class="nav navbar-nav">
                    <li><a href="#" class="header"><i class="glyphicon glyphicon-home"></i>Accueil</a></li>
                    <li><a href="#"><i class="glyphicon glyphicon-bed"></i>Patients</a></li>
                    <li><a href="#"><i class="glyphicon glyphicon-briefcase"></i>Medecins conventionnés</a></li>

                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#"><i class="glyphicon glyphicon-lock"></i>Connexion</a></li>
                    <li><a href="#"><i class="glyphicon glyphicon-user"></i>Inscription</a></li>
                    

                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="shadow shadow-lg footer">
            <p>&copy; @DateTime.Now.Year - La Régie Nationale des Tabacs et des Allumettes</p>
        </footer>
    </div>


    <!-- I have included js at the end of the body-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</body>
</html>